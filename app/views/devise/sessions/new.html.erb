<div class="container my-4">
  <div class="row mb-4">
    <h2>ログイン</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mb-2">
      <label for="exampleFormControlInput1" class="form-label">
        <%= f.label "メールアドレス" %><br />
      </label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "exampleFormControlInput1"%>
    </div>

    <div class="row mt-4">
      <label for="exampleFormControlInput1" class="form-label">
        <%= f.label "パスワード" %><br />
      </label>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "exampleFormControlInput1" %>
    </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label "パスワードを保存する" %>
    </div>
  <% end %>

    <div class="row mt-4 mb-3">
        <%= f.submit "ログイン", class: "btn btn-outline-info" %>
    </div>
  <% end %>
  <div class="row mt-5">
    <%= link_to "パスワードをお忘れの方", new_user_password_path %>
  </div>
  <div class="row mt-4">
    <p>※アカウントをお持ちでない方はこちらから</p>
    <%= link_to "新規登録", new_user_registration_path %>
  </div>
</div>
