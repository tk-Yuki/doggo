<div class="container my-4 wf-mplus1p">
  <h2 class="mb-4 mx-1">ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="m-1">
      <label for="exampleFormControlInput1" class="form-label">
        <%= f.label "メールアドレス" %><br />
      </label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "exampleFormControlInput1"%>
    </div>

    <div class="m-1">
      <label for="exampleFormControlInput1" class="form-label">
        <%= f.label "パスワード" %><br />
      </label>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "exampleFormControlInput1" %>
    </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label "パスワードを保存する" %>
    </div>
  <% end %>

    <div class="mt-4 mb-3 mx-1">
        <%= f.submit "ログイン", class: "btn btn-outline-info" %>
    </div>
  <% end %>
  <div class="mt-4 mx-1">
    <%= link_to "パスワードをお忘れの方", new_user_password_path %>
  </div>
  <div class="mt-4 mx-1">
    <p>※アカウントをお持ちでない方はこちらから
      <%= link_to "新規登録", new_user_registration_path %>
    </p>
  </div>
</div>
