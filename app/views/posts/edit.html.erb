<h3>投稿を編集</h3>
<%= attachment_image_tag @user, :profile_image,:fill, 100, 100, format:'jpeg', fallback:"" %>
<%= @user.name %>

<%= form_with model: @post, url: posts_path, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>
<% if @post.user == current_user %>
  <%= link_to "削除", post_path(@post), method: :delete %>
<% end %>
